#!/usr/bin/env bash

# Check for unstaged changes
if [ -n "$(git diff --name-only)" ]; then
  echo "âŒ Error: There are unstaged changes. Please stage all changes before committing."
  echo "Files with unstaged changes:"
  git diff --name-only
  exit 1
fi

# Run pre-commit checks (lint-staged, lint, build, and tests)
echo "ğŸ” Running pre-commit checks (lint, build, and tests)..."
pnpm pre-commit
